    <ContentPage.Content>

        <StackLayout VerticalOptions="FillAndExpand">
            <ActivityIndicator IsRunning="true" IsVisible="{Binding IsBusy}" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Color="#e43f8f" Margin="0,20,0,0"/>
            <SearchBar
                Placeholder="Search Messages"
                TextTransform="Lowercase"
                Text="{Binding SearchText}"
                x:Name="SearchBar"
                SearchCommand="{Binding SearchCommand, Mode=TwoWay}"
                SearchCommandParameter="{Binding Text, Source={x:Reference SearchBar}}">
                <SearchBar.Behaviors>
                    <behaviours:SearchbarBehaviour/>
                </SearchBar.Behaviors>
            </SearchBar>
            <ListView 
                    HasUnevenRows="True"
                    ItemsSource="{Binding Messages}" 
                    Margin="20,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame  
                                HasShadow="True" 
                                CornerRadius="10"
                                Margin="16" 
                                Padding="16" 
                                VerticalOptions="Start" 
                                BackgroundColor="White" 
                                BorderColor="Gray">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomepageViewModel}}, Path=MessageSelectedCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <Grid 
                                    RowDefinitions="Auto, Auto, Auto, Auto, Auto"
                                    ColumnDefinitions="Auto"
                                    VerticalOptions="FillAndExpand">
                                    <Label
                                        Grid.Row="0"
                                        Text="{Binding MessageTitle}" 
                                        VerticalOptions="CenterAndExpand" 
                                        FontSize="Small"/>
                                    <Label 
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        HorizontalOptions="End"
                                        VerticalOptions="CenterAndExpand"
                                        Text="{Binding PostDate}" 
                                        FontSize="Micro"/>
                                    <Label 
                                        Grid.Row="1"
                                        Text="{Binding User}" 
                                        FontSize="Micro"/>
                                    <BoxView 
                                        Grid.ColumnSpan="2"
                                        Grid.Row="2"
                                        Color="Gray" 
                                        HeightRequest="2" 
                                        HorizontalOptions="Fill"/>
                                    <Label 
                                        Grid.ColumnSpan="2"
                                        Grid.Row="4"
                                        Text="{Binding Description}"/>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid MinimumHeightRequest="70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="2"
                        Text="{x:Static fontawesome:FontAwesomeIcons.Plus}"
                        BackgroundColor="Transparent"
                        Margin="10"
                        CornerRadius="20"
                        FontFamily="{StaticResource FontAwesomeSolid}" 
                        FontSize="Large"
                         Command="{Binding NewCommand}"/>
                <Button Grid.Column="1"
                        Text="{x:Static fontawesome:FontAwesomeIcons.User}"
                        BackgroundColor="Transparent"
                        Margin="10"
                        CornerRadius="20"
                        FontFamily="{StaticResource FontAwesomeSolid}" 
                        FontSize="Large"
                        Command="{Binding ProfileCommand}"/>
                <Button Grid.Column="0"
                        Text="{x:Static fontawesome:FontAwesomeIcons.SignOutAlt}" 
                        FontFamily="{StaticResource FontAwesomeSolid}" 
                        FontSize="Large"
                        Margin="10"
                        CornerRadius="20"
                        BackgroundColor="Transparent" 
                        Command="{Binding LogoutCommand}"/>
            </Grid>
            

            
            
        </StackLayout>
        
